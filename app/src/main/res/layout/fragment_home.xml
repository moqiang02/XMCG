<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="vertical"
    tools:context="com.example.rex.xmcg.activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/carousel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/notice" />

        <TextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="做最好的医院" />
    </LinearLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:columnCount="2"
        app:rowCount="5">

        <LinearLayout
            android:id="@+id/bespeak"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@mipmap/bespeak_big" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="预约挂号" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1">


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="智能分诊" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/vis" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="位置交通" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/traffic" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="健康体检" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/check" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="在线缴费" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/pay" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="4">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="医生介绍" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/introduce" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/report"
            android:padding="10dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            app:layout_row="2">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="报告查询" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/report_home" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            app:layout_row="3">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="住院费清单" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/list" />
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_column="1"
            app:layout_columnWeight="1"
            android:gravity="center_vertical"
            app:layout_row="4">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="满意度调查" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/research" />
        </LinearLayout>
    </android.support.v7.widget.GridLayout>


</LinearLayout>
